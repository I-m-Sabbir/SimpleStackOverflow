@model PostCreateModel
@{
    ViewData["Title"] = "Create";
}
@section Styles {
    <!-- include summernote css -->
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.css" rel="stylesheet">
}

<div class="card">
    <form asp-action="Create" asp-controller="Post" method="post" asp-antiforgery="true">
        <div class="card-header text-center">
            <h3 class="text-bold">Ask a Question</h3>
        </div>
        <div class="card-body">

            <div class="form-group row">
                <label class="col-2 col-form-label">Title</label>
                <div class="col-10">
                    <input asp-for="Title" type="text" class="form-control" required />
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-2 col-form-label">Description</label>
                <div class="col-10">
                    <textarea id="summernote" asp-for="Description">

                    </textarea>
                    <span class="text-danger" asp-validation-for="Title"></span>
                </div>
            </div>

        </div>
        <div class="card-footer text-center">
            <input type="submit" value="Submit" class="btn btn-success rounded"/>
        </div>
    </form>
</div>

@section Scripts
{
    <!-- include summernote js -->
    <script src="~/admin/custom/bootstraptagsinput.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote-lite.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#summernote").summernote({
                placeholder: "Write your content here",
                tabsize: 2,
                height: 200
            });
            $('.dropdown-toggle').dropdown();
        });
    </script>
}